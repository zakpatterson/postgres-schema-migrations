{
  "name": "postgres-schema-migrations",
  "version": "7.0.1",
  "description": "Database migrations for PostgreSQL",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pg-validate-migrations": "./dist/bin/validate.js"
  },
  "authors": [
    "Thom Wright",
    "Zak Patterson"
  ],
  "keywords": [
    "postgres",
    "postgresql",
    "migration",
    "migrations",
    "sql",
    "database",
    "db"
  ],
  "homepage": "https://github.com/zakpatterson/postgres-schema-migrations#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:zakpatterson/postgres-schema-migrations.git"
  },
  "bugs": {
    "url": "https://github.com/zakpatterson/postgres-schema-migrations/issues"
  },
  "engines": {
    "node": ">10.17.0"
  },
  "scripts": {
    "checkPushed": "[ \"$(git rev-list --count @{upstream}..HEAD)\" -eq 0 ] || (echo You have unpushed commits && exit 1)",
    "prepublishOnly": "pnpm test && pnpm run build",
    "check-formatting": "./node_modules/.bin/prettier '**/*.ts' --list-different",
    "fix-formatting": "./node_modules/.bin/prettier '**/*.ts' --write",
    "lint": "pnpm run eslint && pnpm run check-formatting",
    "eslint": "eslint 'src/**/*.ts'",
    "test-integration": "ava --config ava.config.integration.cjs",
    "test-unit": "ava --config ava.config.unit.cjs",
    "test": "pnpm run test-unit && npm run lint && pnpm run test-integration",
    "preversion": "pnpm test",
    "build": "rm -rf ./dist && rsync -a --exclude='*.ts' --exclude='__tests__' --exclude='__unit__' --prune-empty-dirs src/ dist/ && tsc --project tsconfig-build.json && node -e \"const p=require('./package.json'); p.main='index.js'; p.types='index.d.ts'; p.bin={'pg-validate-migrations':'./bin/validate.js'}; require('fs').writeFileSync('./dist/package.json', JSON.stringify(p, null, 2));\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "node ./node_modules/fit-commit-js/lib/hook.js .git/COMMIT_EDITMSG",
      "pre-commit": "pnpm run lint",
      "pre-push": "pnpm test"
    }
  },
  "dependencies": {
    "pg": "^8.17.1",
    "sql-template-strings": "^2.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.9",
    "@types/pg": "^8.16.0",
    "@types/sinon": "^21.0.0",
    "ava": "^6.4.1",
    "eslint": "^9.39.2",
    "fit-commit-js": "^0.3.2",
    "husky": "^9.1.7",
    "prettier": "^3.8.0",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  }
}
